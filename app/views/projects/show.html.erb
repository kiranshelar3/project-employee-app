<h4>Project Details</h4>
<br/>
<p>
  <strong>Project Title:</strong>
  <%= @project.title %>
</p>
<p>
  <strong>Project Team Members:</strong>

  <table class="table table-striped table-bordered table-hover">      
    <tr>
      <th>Name</th>
      <th>Employee Id</th>
      <th></th>
    </tr>
   
    <% @project.employees.each do |emp| %>
      <tr>
        <td><%= emp.name %></td>
        <td><%= emp.emp_id %></td>
        <td><%= link_to 'View', employee_path(emp), class:"btn btn-secondary" %></td>
      </tr>
    <% end %>
  </table>
</p>

<br>
<%= link_to 'Edit project', edit_project_path(@project), class:"btn btn-secondary" %></td>
