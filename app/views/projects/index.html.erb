<h3>Projects List</h3>
<br>

<table class="table table-striped table-bordered table-hover">  
  <tr>
    <th>Project Name</th>
    <th>Total Team Members</th>
    <th>Actions</th>
  </tr>
 
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.title.upcase %></td>
      <td><%= project.employees.count %></td>
      <td><%= link_to 'View', project_path(project), class:"btn btn-secondary" %>
      <%= link_to 'Edit', edit_project_path(project), class:"btn btn-secondary" %></td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New Project', new_project_path, class:"btn btn-primary" %>



