<h2>Add Project</h2>

<%= form_for :project, url: projects_path do |f| %>
  <p>
    <%= f.label :title, class:"form-label" %><br>
    <%= f.text_field :title, class:"form-control" %>
  </p>

  <div class="row">
    <div class="col-md-11">
      <%= select_tag 'employee_ids[]', options_for_select(Employee.all.map{ |e| [e.name, e.id] }, @employees.pluck(:employee_id)), multiple: true, size: 05,class:"form-control" %>   
    </div>
  </div>
  <br/>
  <p>
    <%= f.submit class:"btn btn-primary" %>
  </p>
<% end %>

<%= link_to 'Back', projects_path, class:"btn btn-secondary" %>